<h1>商品一覧</h1>
<%= debug "Find me in app/views/items/new.html.erb" if Rails.env.development? %>

<%# 検索 %>
<div class="container">
  <%= search_form_for @i do |f| %>
    <%= f.label :name_start, "商品名を検索" %>
    <%= f.search_field :name_start, class: 'form-control' %>
    <%# 検索ボタン %>
    <%= f.submit "検索", class:"btn btn-primary" %>
  <% end %>
  
</div>

<%= render 'items', items: @items %>

<%= debug @items if Rails.env.development? %>
