<h1>商品一覧</h1>
<%= debug "Find me in app/views/items/new.html.erb" if Rails.env.development? %>

<%# 検索 %>
<div class="container row">
  <%= search_form_for @i do |f| %>
    <div class="form-group">
      <%= f.label :name_start, "商品名を検索", class: "control-label" %>
    </div>
    <%= f.search_field :name_start, class:"form-control" %>
    <%# typeを設定 %>
      <%= f.label :type_id_start, "種類" %>
      <%= f.select :type_id_start, Type.all.map{|o| [o.name, o.id]}, {}, {class: 'form-control'} %>
    <%# 検索ボタン %>
    <%= f.submit "検索", class:"btn btn-primary" %>
  <% end %>
  
</div>

<%= render 'share/items', items: @items %>

<%= debug @items if Rails.env.development? %>
