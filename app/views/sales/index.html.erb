<h1>購入履歴</h1>

<div class="box history_contents">
  <div class="history_count">
    <p class="count_number">
      <span class="number"><%= @sales.count %></span>
      <span class="count_suffix">件</span>
    </p>
  </div>
  
  <% @sales.each do |s| %>
    <div class="table_list">
    <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <th><span class="history_purchase_date"><%= s.created_at %></span></th>
          <th>
            <div class="grand_total">
              <span class="grand_total_label">合計金額:</span>
              <span class="price"><%= s.totalFee %></span>
            </div>
            
          </th>
          <th>
            <%#= link_to "詳細", s %>
          </th>
        </tr>
        <% s.sale_items.each do |item| %>
          <tr>
            <th>
              <% if item.image.url %>
                <%= image_tag(item.image.url, alt: item['name'], class: "sale-img") %>
              <% else %>
                <%= image_tag('no-image.png', alt: item['name'], class: "sale-img") %>
              <% end %>
              <span><%= item.name %>
              </span>
            </th>
            <th>
              <span><%= item.price %>円×</span>
              <span><%= item.quantity %>個</span>
            </th>
            <th><span><%= item.price * item.quantity %></span></th>
          </tr>
        <% end %>

      </tbody>
    </table>
    </div>
  <% end %>
  
  
</div>


<%= debug @sales if Rails.env.development? %>