
<div class="container">
  <div class="row">
  <div class="container-inner inner-default clearfix">
    <% items.each do |item| %>
    <div class="col-sm-6 col-lg-4">
      <!--div class="panel panel-primary" -->
        <div class="card">
          <% #TODO 画像は検索エンジンかAmazon, RakutenとかのAPIで引っ張ってくる %>
          <% if item.image.url %>
            <%= image_tag(item.image.url, alt: item['name'], class: "card-img-top") %>
          <% else %>
            <%= image_tag('no-image.png', alt: item['name'], class: "card-img-top") %>
          <% end %>
          <div class="card-block">
            <h4 class="card-title"> <%= link_to item.name, item %> </h4>
          </div>
        </div>
      <!-- /div -->
    </div>

    <% end %>
  </div>
  </div>
</div>

